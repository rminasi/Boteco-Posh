
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create your favorite cocktail! </h1>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, wrapper_html: { class: "upload" } %>
        <%= f.input :photo_cache, as: :hidden, wrapper_html: { class: "upload-button" } %>
        <%= f.button :submit, class: 'btn btn-success'%>
      <% end %>
      <br>
    <%= link_to "Back to cocktail list", root_path, class: 'btn btn-outline-success back' %>
    </div>
  </div>
</div>
